<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.androiddevs.sqlite">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.androiddevs.sqlite.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.androiddevs.sqlite.InsertActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name="com.androiddevs.sqlite.DeleteActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".UpdateEmailActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".UpdateNameActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name="com.androiddevs.sqlite.UpdateActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name="com.androiddevs.sqlite.DisplayActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name="com.androiddevs.sqlite.DisplayAllActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name="com.androiddevs.sqlite.DisplayRowCountActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name="com.androiddevs.sqlite.DislpayWithIdActivity"
            android:screenOrientation="portrait"></activity>
        
    </application>

</manifest>
